extends layout


block content
  div(class='page-title')
      h3= title
      div(class='page-right')
        a(href='/loans/new') Create New Loan
        a(href='/loans/all') All
        a(href='/loans/overdue') Overdue
        a(href='/loans/out') Checked Out

  table(class='listings')
    tablebody
    tr
      td
        p ID
      td
        p Book
      td
        p Patron
      td
        p Loaned On
      td
        p Return By
      td
        p Returned On
      each loan in loans
            tr
              td
                a(href = "/loans/" + loan.id)
                  p= loan.id
              td
                a(href = "/books/details/" + loan.book_id)
                  p= loan.book.title
              td
                a(href = "/patrons/details/" + loan.patron_id)
                  each patron in loan.patrons
                      p= patron.first_name
              td
                p= loan.loaned_on
              td
                p= loan.return_by
              td
                if loan.returned_on === 'Invalid date'
                  a(href = "/loans/" + loan.id)
                    p Return Book
                else
                  p= loan.returned_on
